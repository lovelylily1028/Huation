@charset "UTF-8";

.subject {
	border-top: 5px solid gray;
	border-bottom: 3px solid gray;
}

.xright {
	text-align: right;
	margin-top: 10px;
}

.cright{
	text-align: right;
}

.replylist{
	margin-top:10px;
	margin-bottom: 5px;
}

.content  {
	font-size: 20px;
	height: 100%;
	width: 98%;
	margin-top: 20px;
	margin-left: 15px;
	padding: 3px;
}

textarea {
	width: 93%;
	padding: 3px 1%;
}
.comment{
	border-top: 1px solid gray;
}

.replybox{
	width: 85%;
	height: 40px;
	margin-left: 2%;
	margin-top: 2%;
	}

.reply{
	height: 75%;
	width: 85%;
	margin-top: 3px;
	
}

.contentInnerleft input[type='text']{
	height: 45px;
	padding-left: 15px;
	border:none;
	outline: none;
	font-size: 25px;
	font-family: 'Black Han Sans', sans-serif;
	color:black;	
}

.commentBody > textarea{
	width: 80%;
	height: 100%;
	resize: none;
	border: none;
	outline:none;
	padding:10px;
	font-size: 15px;
	font-weight: 500;
}

.contentInnerleft > div{
	height: 50px;
	display:flex;
	align-items:center;
	padding-left: 15px;
	font-size: 15px;
	color:black;
}

.img_button{
	width: 50px;
	height: 50px;
	margin-right: 50px;
	
}

.groupSearch{
	text-align: center; 
	width: 100%;
    padding: 20px 24px 20px 64px;
    border: 15px solid red;;
