<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ page import="java.util.Date"%>
<%@ page import="java.text.SimpleDateFormat"%>
<%
	Date nowTime = new Date();
	SimpleDateFormat sf = new SimpleDateFormat("yyyy년 MM월 dd일 a hh시mm분");
%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Insert title here</title>
		<style>
		.main_footer {
			width: 100%;
			height: 90px;
			display: flex;
			align-items: center;
			justify-content: flex-end;
		}
		
		.timer {
			width: 400px;
			height: 50px;
			border-radius: 20px;
			background-color: #26292d;
			color: #fcce00;
			font-size: 20px;
			font-weight: bold;
			display: flex;
			align-items: center;
			justify-content: center;
			margin-right: 50px;
		}
		</style>
	</head>
	<body>
	  </div>
        </div>
			<div class="main_footer">
			<div class="timer">
				<%= sf.format(nowTime) %>
			</div>
		</div>
	</body>
</html>